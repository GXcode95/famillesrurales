%div.w-full.max-w-xl.mx-auto.space-y-6
  .flex.items-center.justify-between
    %h1.text-2xl.font-bold.text-gray-900
      = @category.name
    .flex.gap-3
      = link_to "Modifier", edit_category_path(@category),
        class: "inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-700"
      = link_to "Retour à la liste", categories_path,
        class: "inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50"

  %div.bg-white.shadow-sm.rounded-lg.p-6
    %p.text-sm.text-gray-500.mb-2
      Créée le
      = l(@category.created_at, format: :short)

