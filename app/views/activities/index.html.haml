%div.w-full
  .flex.items-center.justify-between.mb-6
    %h1.text-2xl.font-bold.text-gray-900
      Activités
    = link_to "Nouvelle activité", new_activity_path,
      class: "inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-700"

  - if @activities.any?
    %div.overflow-x-auto.bg-white.shadow.rounded-lg
      %table.min-w-full.divide-y.divide-gray-200
        %thead.bg-gray-50
          %tr
            %th.px-4.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase
              Nom
            %th.px-4.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase
              Catégorie
            %th.px-4.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase
              Responsable
            %th.px-4.py-3.text-right.text-xs.font-medium.text-gray-500.uppercase
              Actions
        %tbody.bg-white.divide-y.divide-gray-200
          - @activities.each do |activity|
            %tr
              %td.px-4.py-3.text-sm.text-gray-900
                = activity.name
              %td.px-4.py-3.text-sm.text-gray-500
                = activity.category&.name
              %td.px-4.py-3.text-sm.text-gray-500
                = activity.manager_name
              %td.px-4.py-3.text-sm.text-right.space-x-2
                = link_to "Voir", activity,
                  class: "inline-flex items-center rounded-md border border-gray-300 bg-white px-3 py-1 text-xs font-medium text-gray-700 hover:bg-gray-50"
                = link_to "Modifier", edit_activity_path(activity),
                  class: "inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-3 py-1 text-xs font-medium text-white hover:bg-indigo-700"
                = button_to "Supprimer", activity,
                  method: :delete,
                  data: { confirm: "Supprimer cette activité ?" },
                  class: "inline-flex items-center rounded-md border border-transparent bg-red-600 px-3 py-1 text-xs font-medium text-white hover:bg-red-700"
  - else
    %p.text-gray-600
      Aucune activité pour le moment.

