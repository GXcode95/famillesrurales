- if controller_name != 'sessions'
  %p.text-center.text-sm
    = link_to "Déjà un compte ? Connecte-toi", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500"

- if devise_mapping.registerable? && controller_name != 'registrations'
  %p.text-center.text-sm.mt-2
    = link_to "Pas encore de compte ? Inscription", new_registration_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500"

- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  %p.text-center.text-sm.mt-2
    = link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500"

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  %p.text-center.text-sm.mt-2
    = link_to "Pas reçu les instructions de confirmation ?", new_confirmation_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500"

- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  %p.text-center.text-sm.mt-2
    = link_to "Pas reçu les instructions de déverrouillage ?", new_unlock_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500"

- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    %p.text-center.text-sm.mt-4
      = button_to "Se connecter avec #{OmniAuth::Utils.camelize(provider)}",
        omniauth_authorize_path(resource_name, provider),
        data: { turbo: false },
        class: "inline-flex justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50"

